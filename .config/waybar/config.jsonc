{
  "layer": "top",
  "position": "top",
  //"margin-top": 2,
  //"margin-left": 5,
  //"margin-right": 5,
  //"margin-bottom": 2,
  "margin": "4 4px",
  //"padding": "0 0px",
  "height": 5,
  "modules-left": ["custom/launcher", "hyprland/workspaces", "custom/media"],
  "modules-center": ["clock"],
  "modules-right": ["pulseaudio", "backlight", "cpu", "memory", "disk", "battery"],
  

  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='red'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

  "custom/launcher": {
    "format": "",
    "on-click": "bash /home/$USER/.config/waybar/scripts/app_launcher.sh",
    "tooltip-format": "Launch your favorite apps"
  },

  "custom/pacman": {
    "format": "  {}",
    "interval": "once",
    "exec": "checkupdates | wc -l",
    "on-click": "update-system",
    "signal": 8,
    "tooltip-format": "{} updates available"
  },

  "custom/media": {
    "format": "{}",
    //"format-alt": "{}",
    "escape": true,
    "return-type": "json",
    "max-length": 30,
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl stop",
    "smooth-scrolling-threshold": 1, // This value was tested using a trackpad, it should be lowered if using a mouse.
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
    "exec": "$HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null" // Script in resources/custom_modules folder
  },

  "custom/battery": {
    "exec": "~/.config/waybar/scripts/battery_health.sh",
    "interval": 300, // update per 5 min
    "format": "{}",
    "tooltip": false
  },

  "battery": {
    "format": "{icon}  {capacity}% ({time})",
    "format-charging": "{icon} {capacity}% ({time})",  // time to full
    "format-discharging": "{icon} {capacity}% ({time})", // time left
    "format-plugged": "{icon} {capacity}% (plugged)",
    "format-full": "{icon} {capacity}% (full)",
    "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "tooltip-format": "Battery is at {capacity}%" 
  },

  "clock": {
    "timezone": "America/Los_Angeles",
    "format": "󰃰  {:%a %d %b  %I:%M %p}",
  /*  "format-alt": "󰥔  {:%a, %d. %b  %I:%M %p}", */
    "tooltip-format": "Date: {:%Y-%m-%d}"
  },

  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-bluetooth": "󰂱 {volume}%",
    "format-muted": "󰖁",
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "ignored-sinks": ["Easy Effects Sink"],
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "󰋎",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["󰖀", "󰕾"]
    },
    "tooltip-format": "Volume: {volume}%"
  },

  "network": {
    "interface": "wlo1",
    "format": "{ifname}",
    /*"format-wifi": "{icon}  {essid} ({signalStrength}%)",*/
    "format-wifi": "{icon} ({signalStrength%})",
    "format-ethernet": "󰈀  Wired: {ipaddr}",
    "format-disconnected": "󰤭  Disconnected",
    "interval": 5,
    "max-length": 50,
    "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
    "tooltip-format": "Connected to {essid}"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": {
      "1": "Ⅰ",
      "2": "Ⅱ",
      "3": "Ⅲ",
      "4": "Ⅳ",
      "5": "Ⅴ",
      "6": "Ⅵ",
      "7": "Ⅶ",
      "8": "Ⅷ",
      "9": "Ⅸ",
      "10": "Ⅹ"
      //"1": "일",
      //"2": "이",
      //"3": "삼",
      //"4": "사",
      //"5": "오",
      //"6": "육",
      //"7": "칠",
      //"8": "팔",
      //"9": "구",
      //"10": "십"


    },
    "persistent-workspaces": {
      "*": 5 // 5 workspaces by default on every monitor
    },
    "sort-by-number": true
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon}   {percent}%",
    "format-icons": ["󰃞", "󰃟", "󰃠"]
  },

  //"custom/weather": {
  //  "exec": "$~/.config/waybar/scripts/get_weather.sh Los+Angeles+US",
  //  "return-type": "json",
  //  "format": "{}",
  //  "tooltip": true,
  //  "interval": 3600
  //},

  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power mode: {profile}",
    "tooltip": true,
    "format-icons": {
      "default": "",
      "performance": "󰠠",
      "balanced": "󰚀",
      "power-saver": "󰌪"
    }
  },

  "hyprland/window": {
    "format": "{class}",
    "separate-outputs": true,
    "icon": true,
    "icon-size": 18
},

  "backlight":{
    "device": "intel_backlight",
    "format": "󰃠 {percent}%",
    "interval": "once",
    "exec": "brightnessctl -m | awk -F, '{print $4}' | tr -d %",
    "exec-on-event": true  // Updates when brightness changes    
  },
  
  "cpu": {
    "interval": 10,
    "format": "CPU: {:.2f}%",
    "max-length": 20
  },

  "memory": {
    "interval": 10,
    "format": "Mem: {}%",
    "max-length": 20
  },

  "disk": {
    "interval": 30,
    /*"format": "   {percentage_used}% used on {path}",*/
    "format": "Disk: {percentage_used}%",
    "path": "/",
    "max-length": 20
  }
}
